usuario.interface.ts

// src/app/interfaces/usuario.interface.ts
export interface Usuario {
  id: number;  // Com√∫n para todos los usuarios, usaremos un solo campo para el id
  usuario: string;  // Nombre de usuario, puede ser para todos
  contrasena: string;  // Contrase√±a, com√∫n a todos
  rol: string;  // Com√∫n para todos los usuarios
  // Com√∫n para todos los usuarios
